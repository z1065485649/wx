html,
body {
  height: 100%;
  width: 100%;
  font-size: 14px;
}

#app {
  width: 100%;
  height: 100%;
  color: #495060;
  text-align: center;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  //font-family: tahoma, Arial, simhei, "Microsoft YaHei", SourceHanSans, Verdana, Geneva, sans-serif;
  font-family: "Helvetica Neue", Helvetica, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "微软雅黑", Arial, sans-serif;
}

.ivu-table-row-highlight td,
.ivu-table-stripe .ivu-table-body tr.ivu-table-row-highlight:nth-child(2n) td,
.ivu-table-stripe .ivu-table-fixed-body tr.ivu-table-row-highlight:nth-child(2n) td,
tr.ivu-table-row-highlight.ivu-table-row-hover td {
  background-color: #2d8cf0 !important;
}

.ivu-table-row-highlight .ivu-table-cell {
  color: white;
}

.ivu-form-item-label {
  font-weight: bold
}

/**情境文本颜色**/
.text-danger {
  color: #ed3f14;
}

.text-warning {
  color: #f90;
}

.text-info {
  color: #2db7f5;
}

.text-success {
  color: #19be6b;
}

.text-primary {
  color: #2d8cf0;
}